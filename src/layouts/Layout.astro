---
import Navbar from '../components/Navbar.astro';
import ChessSnow from '../components/ChessSnow.astro';
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/global.css"> <link rel="icon" type="image/svg+xml" href="/caballo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
</head>
<body>
    <ChessSnow />

    <div class="container mx-auto px-4">
        <Navbar />
        <main>
            <slot /> </main>
    </div>
</body>
</html>

<style is:global>
    html {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background: #13151a;
        color: #fff;
    }
    
    /* ELIMINAMOS EL CÓDIGO PROBLEMÁTICO DEL BODY */
    body {
        /* Ya no necesita 'grid' ni 'place-content-center' */
        margin: 0;
        padding: 0;
    }
</style>