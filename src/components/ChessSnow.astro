---
// components/ChessSnow.astro
Math.random() * 100;
const pieces = ['♙', '♖', '♘', '♗', '♕', '♚']; // Emojis de piezas
---

<div id="chess-snow-container"></div>

<style>
  .chess-piece {
    position: fixed;
    top: -50px;
    font-size: 24px;
    pointer-events: none;
    animation: fall linear infinite;
    opacity: 0.8;
  }

  @keyframes fall {
    to {
      transform: translateY(100vh) rotate(360deg);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    function createSnow() {
      const container = document.getElementById('chess-snow-container');
      if (!container) return;
      const piece = document.createElement('div');
      const randomPiece = ['♙', '♖', '♘', '♗', '♕', '♔'][Math.floor(Math.random() * 6)];
      piece.textContent = randomPiece;
      piece.style.left = Math.random() * 100 + 'vw';
      piece.style.animationDuration = Math.random() * 10 + 5 + 's';
      piece.style.fontSize = Math.random() * 20 + 12 + 'px';
      piece.className = 'chess-piece';
      container.appendChild(piece);
      setTimeout(() => piece.remove(), parseFloat(piece.style.animationDuration) * 1000);
    }
    setInterval(createSnow, 500);
  });
</script>