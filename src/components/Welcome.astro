---
import { getCollection } from 'astro:content';

const cursos = await getCollection('cursos');
console.log(cursos); // Verifica que los datos sean correctos
---

<div id="container">

	<main>
			<h1 class="text-center text font-sans-serif">
				♟️Curso de Ajedrez♟️
				<span class="block">Con Jesus</span>
			</h1>
			<section aria-label="Contenidos del curso">
				<div class="px-4 mx-auto max-w-screen-xl">
					<div class="grid gap-6 md:grid-cols-2">
						{
							cursos.map(curso => {
								const {slug, data} = curso
								const { title, author, img, description, readtime } =
								data
		
								return (
									<article class="flex">
										<a href={`/curso/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110">
											<img src={`/${img}`} alt="title" class="w-fullrounded-lg"/>
										</a>

								<div class="flex flex-col justify-center">
									<h2 transition:name={`title-${slug}`} class="mb-2 text-2xl font-bold leading-tight text-white">
										{title}
									</h2>

									<p class="mb-4 text-black-300 max-w-sm">{description}</p>
									<span class="text-xs">⏳ Lectura en {readtime} minutos</span>
								</div>
									</article>
								)
							}
							)
						}
					</div>
				  </div>
			</section>
	</main>

</div>

