---
import { getCollection } from 'astro:content';

interface Curso {
  slug: string;
  data: {
    title: string;
    author: string;
    img: string;
    description: string;
    readtime: number;
  };
}

const allCursos = await getCollection('cursos');
const cursos = allCursos.filter((curso: Curso) => curso.slug !== 'sobremi');
---

<div id="container" class="min-h-screen flex flex-col">
  <main class="flex-1">
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-white text-center mt-10 mb-6 tracking-wide">
      <span class="bg-gradient-to-r from-yellow-400 via-red-500 to-purple-600 text-transparent bg-clip-text">
        Cursos de Ajedrez con Jesús
      </span>
    </h1>
    <section aria-label="Contenidos del curso">
      <div class="px-2 sm:px-4 mx-auto max-w-screen-xl">
        <div class="grid gap-6 md:grid-cols-2">
          {cursos.map((curso: Curso) => (
            <article class="flex flex-col md:flex-row items-center md:items-start bg-gray-900 p-3 sm:p-4 rounded-lg">
              <div class="w-full max-w-xs h-64 sm:h-80 flex-shrink-0">
                <a href={`/curso/${curso.slug}`} class="mb-2 xl:mb-0 transition hover:scale-105 block w-full h-full">
                  <img src={`/${curso.data.img}`} alt={curso.data.title} class="w-full h-full rounded-lg object-cover aspect-[7/8]" />
                </a>
              </div>
              <div class="flex flex-col justify-center p-3 sm:p-4 w-full">
                <h2 class="px-2 sm:px-5 mb-2 text-xl sm:text-2xl font-bold leading-tight text-white">
                  {curso.data.title}
                </h2>
                <p class="px-2 sm:px-5 mb-4 text-gray-300 max-w-sm">{curso.data.description}</p>
                <span class="text-xs px-2 sm:px-5">⏳ Lectura en {curso.data.readtime} minutos</span>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</div>
